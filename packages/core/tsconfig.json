{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "target": "ES6",
    "strict": true,
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
